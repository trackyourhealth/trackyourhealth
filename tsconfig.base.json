{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@trackyourhealth/api/auth/data": ["libs/api/auth/data/src/index.ts"],
      "@trackyourhealth/api/auth/feature": [
        "libs/api/auth/feature/src/index.ts"
      ],
      "@trackyourhealth/api/auth/util": ["libs/api/auth/util/src/index.ts"],
      "@trackyourhealth/api/common/util": ["libs/api/common/util/src/index.ts"],
      "@trackyourhealth/api/core/util": ["libs/api/core/util/src/index.ts"],
      "@trackyourhealth/api/health/feature": [
        "libs/api/health/feature/src/index.ts"
      ],
      "@trackyourhealth/api/kratos/util": ["libs/api/kratos/util/src/index.ts"],
      "@trackyourhealth/api/prisma": ["libs/api/prisma/src/index.ts"],
      "@trackyourhealth/api/studies": ["libs/api/studies/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "prisma", "tmp"]
}
